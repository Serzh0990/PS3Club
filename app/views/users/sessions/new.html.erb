   <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class = 'form-group'>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label "Запомнить меня" %>
      <% end -%>
