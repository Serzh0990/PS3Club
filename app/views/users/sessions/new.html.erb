<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class = "row">
  <div class = "col-md-5"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true , class: "form-control"%></div>

  <div class="col-md-5"><%= f.label :password %><br />
  <%= f.password_field :password, class: "form-control" %></div>
</div>

<div class = "row">
  <% if devise_mapping.rememberable? -%>
    <div class = "col-md-5"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
</div>
<hr>
<div class="row">
  <div class = "col-md-6"><%= f.submit "Sign in", class: "btn btn-default" %></div>
<% end %>
</div>
<p>
<%= render "users/shared/links" %>
