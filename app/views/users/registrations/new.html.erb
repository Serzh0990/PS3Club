<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|  %>
  <%= devise_error_messages! %>
 <div class = "row">	
  <div class = "col-md-3"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

  <div class = "col-md-3"><%= f.label :password %><br />
  <%= f.password_field :password , class: "form-control" %></div>


  <div class = "col-md-3 "><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation , class: "form-control" %></div>
  </div>
<hr>
  <div class = "row">
  <div class = "col-md-4"><%= f.submit "Sign up" , class: "btn btn-default"  %></div>
 </div>
<% end %>
<p>
<%= render "users/shared/links" %>
