<%= provide :title, 'оставить пожелание'%>
<div class = 'row'>
	<div class = 'col-lg-10 col-md-8 col-xs-8'>
		<div class = 'panel panel-success'>
			<div class = 'panel-heading lead'>Добавить пожелание</div>
				<div class = 'panel-body '>
				<%= form_for @wish do |f| %>
				<div class = 'col-lg-5'>
				<div class = 'form-group'>
				<%= f.label 'Заголовок пожелания'%>
				<%= f.text_field :title , class: 'form-control'%>
				</div>
				</div>
				<div class = 'col-lg-9'>
				<div class = 'form-group'>
				<%= f.label 'Текст пожелания' %>
				<%= f.text_area :text, class: 'form-control' %>
				</div>
				</div>
				<div class="col-lg-4">
				    <%= f.submit 'Добавить', class: 'btn btn-success'%>
				  </div>
				<% end %>
				<div>	
		</div>

</div>
</div> 
