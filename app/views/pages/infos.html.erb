<div class="container">
	  <div class="row">
    <% @news.each do |news| %>
	<div class="col-lg-12">
    <h4 class ="text-center lead"> <%= news.title %> </h4>
    <p class="text-center"> <%= image_tag news.image_url(:show).to_s, class: "img-rounded"%> </p><br>
    <p class="text-center"> <%= truncate(news.description,length:700, omission: (".....")) %> </p>
	    <p class="text-left"> <%= link_to 'Подробнее', news_path(news),class: 'btn btn-primary btn-lg' %></p>
		<p> <%= link_to 'Редактировать', edit_news_path(news), class: 'btn btn-warning btn-xs' if current_user.try(:admin)%></p>
		<p class="text-center"><small><span class="label label-success">Добавлено <%= news.created_at.strftime("%d %B %Y , в %H : %M") %></small></p>
		</div>
		<hr>
        <% end%>
</div>
	</div>


	
<%= will_paginate @news, class: "apple_pagination"%>
