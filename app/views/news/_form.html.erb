<div class = "container">
<%= form_for @news, :html => {:multipart => true} do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
    <p>
      <label>Картинка для новости:</label>
      <%= image_tag(@news.image_url(:thumb)) if @news.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache  %>
    </p>
  <div class="actions">
    <%= f.submit 'Добавить', class: 'btn btn-success'%>
  </div>
</div>
<% end %>