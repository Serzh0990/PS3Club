<% cache @news do %>
  <div class="row">	
	<div class = 'col-lg-12'>
	<div class = "panel panel-success">
		<div class = "panel-heading lead">Новости</div>
		<div class = "panel-body">
			</div>
    <% @news.each do |news| %>
	<div class="col-md-12 col-lg-12 col-xs-12">
		    <div class = "col-lg-3 col-md-4"><%=link_to (image_tag news.image_url(:thumb).to_s,class: 'imageClip'), news %></div>
		
			<p class = "text-muted small"><%= news.created_at.strftime('%d %b %Y %H:%M')%></p>
				
     <%= link_to (truncate news.title, length: 100),news , class: 'news-name'%> </p>
    <span class ="news-text"><%= truncate(news.description,length:300, omission: ("...")) %></span>
		 <p><%= link_to 'Редактировать', edit_news_path(news), class: 'text-warning' if current_user.try(:admin)%>
		<p class = "text-right"> <%= link_to 'Читать полностью', news_path(news),class: 'news-read-more' %>
			<hr>
		</div>
        <% end%>
	<ul class = 'text-center'>	<%= will_paginate @news, class: 'apple-pagination'%></ul>

</div>


</div>
</div>
<% end %>